# ifupdown has been replaced by netplan(5) on this system.  See
# /etc/netplan for current configuration.
# To re-enable ifupdown on this system, you can run:
#    sudo apt install ifupdown
auto lo
iface lo inet loopback

auto ens5
iface ens5 inet dhcp

auto br-mgmt
auto br-vxlan
auto br-storage
auto br-vlan

allow-ovs br-mgmt
iface br-mgmt inet static
  ovs_type OVSBridge
  ovs_ports ens6
  address {{ ip_brmgmt }}
  netmask 255.255.255.0

allow-br-mgmt ens6
iface ens6 inet manual
  ovs_bridge br-mgmt
  ovs_type OVSPort

allow-ovs br-vxlan
iface br-vxlan inet static
  ovs_type OVSBridge
  ovs_ports ens7
  address {{ ip_brvxlan }}
  netmask 255.255.255.0

allow-br-vxlan ens7
iface ens7 inet manual
  ovs_bridge br-vxlan
  ovs_type OVSPort

allow-ovs br-storage
iface br-storage inet static
  ovs_type OVSBridge
  ovs_ports ens8
  address {{ ip_brstorage }}
  netmask 255.255.255.0

allow-br-storage ens8
iface ens8 inet manual
  ovs_bridge br-storage
  ovs_type OVSPort

allow-ovs br-vlan
iface br-vlan inet manual
  ovs_type OVSBridge
  ovs_ports ens9

allow-br-vlan ens9
iface ens9 inet manual
  ovs_bridge br-vlan
  ovs_type OVSPort

allow-ovs br-ext
iface br-ext inet manual
  ovs_type OVSBridge
  ovs_ports ens10

allow-br-ext ens10
iface ens10 inet manual
  ovs_bridge br-ext
  ovs_type OVSPort
